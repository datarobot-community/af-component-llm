---
name: Test {{ llm_app_name }}

on:
  push:
    branches: ["main"]
    paths:
      - '{{ llm_app_name }}/**.py'

  pull_request:
    branches: ["main"]
    paths:
      - '{{ llm_app_name }}/**.py'

jobs:
  tests:
    name: "LLM: {{ llm_app_name }} {% raw %}${{ matrix.python-version }}{% endraw %}"
    runs-on: "ubuntu-latest"
    defaults:
      run:
        working-directory: {{ llm_app_name }}

    strategy:
      matrix:
        python-version: ["3.10", "3.11", "3.12", "3.13"]

    steps:
      - uses: "actions/checkout@v4"

      # Ref: https://docs.astral.sh/uv/guides/integration/github/#installation
      - name: Setup uv
        uses: astral-sh/setup-uv@v6
        with:
          working-directory: {{ llm_app_name }}
          enable-cache: true
          cache-dependency-glob: "uv.lock"
          python-version: {% raw %}${{ matrix.python-version }}{% endraw %}

      - name: Install Dependencies
        working-directory: {{ llm_app_name }}
        run: uv sync --all-extras --dev

      - name: Run Static Checks
        working-directory: {{ llm_app_name }}
        run: |
          uv run ruff format --check .
          uv run ruff check .
          uv run mypy --pretty .

      - name: Test
        working-directory: {{ llm_app_name }}
        run: uv run pytest --cov --cov-report=html --cov-report=term --cov-report xml:.coverage.xml

      - name: Get Cover
        uses: orgoro/coverage@v3.2
        with:
          coverageFile: {{ llm_app_name }}/.coverage.xml
          token: {% raw %}${{ secrets.GITHUB_TOKEN }}{% endraw %}
